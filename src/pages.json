{
	"easycom": {
		"^u-(.*)": "uview-ui/components/u-$1/u-$1.vue",
		"^fhu-(.*)": "fhuview-ui/components/fhu-$1/fhu-$1.vue"
	},
	"pages": [ //pages数组中第一项表示应用启动页，参考：https://uniapp.dcloud.io/collocation/pages
		{
			"path": "pages/login/login",
			"style": {
				"navigationBarTitleText": "登录"
			}
		},
		{
			"path": "pages/index/index",
			"style": {
				"navigationBarTitleText": "首页",
				"enablePullDownRefresh": true,
				"backgroundTextStyle": "light", // 下拉刷新loading小圆点颜色，白底+白色小圆点可以实现“隐藏”原生小圆点哦
				"navigationStyle": "custom" // 自定义导航栏(不自定义导航栏也可以使用本组件哦，只不过就只能使用原生小圆点样式了，无法自定义下拉刷新样式)
				// "backgroundColor": "#34A2E8" // 页面背景底色
			}
		},
		{
			"path": "pages/login/login-mobile",
			"style": {
				"navigationBarTitleText": "登录"
			}
		},
		{
			"path": "pages/error/error",
			"style": {
				"navigationBarTitleText": "错误"
			}
		},
		{
			"path": "pages/openId-page/index",
			"style": {
				"navigationBarTitleText": "获取openId"
			}
		}
	],
	"subPackages": [
		{
			"root": "myPackageA",
			"pages": [
				{
					"path": "pages/createdream/index",
					"style": {
						"navigationBarTitleText": "创建梦"
					}
				}
			]
		},
		{
			"root": "myPackageB",
			"pages": []
		}
	],
	"preloadRule": {},
	"globalStyle": {
		"app-plus": {
			// #ifdef H5
			"navigationStyle": "custom"
			// #endif
		},
		"navigationBarBackgroundColor": "#FFFFFF",
		"navigationBarTitleText": "",
		"navigationStyle": "custom",
		"navigationBarTextStyle": "black"
	},
	"condition": { //模式配置，仅开发期间生效
		"current": 9, //当前激活的模式(list 的索引项)
		"list": [
			{
				"name": "首页",
				"path": "pages/index/index"
			},
			{
				"name": "充值记录",
				"path": "pages/user/user-recharge-record"
			},
			{
				"name": "会员充值",
				"path": "pages/user/user-recharge"
			},
			{
				"name": "我的优惠券",
				"path": "pages/user/user-coupon-list"
			},
			{
				"name": "我的地址",
				"path": "pages/user/user-address-list"
			},
			{
				"name": "我的收藏",
				"path": "pages/user/user-fav"
			},
			{
				"name": "钱包",
				"path": "pages/user/user-wallet"
			},
			{
				"name": "钱包",
				"path": "pages/user/user-wallet-bankcard-add"
			},
			{
				"name": "医药商城",
				"path": "pages/shopMall/index"
			},
			{
				"name": "医药商城门店",
				"path": "pages/shopMall/categories"
			}
		]
	}
}
