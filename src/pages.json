{
	"easycom": {
		"^u-(.*)": "uview-ui/components/u-$1/u-$1.vue"
	},
	"pages": [ //pages数组中第一项表示应用启动页，参考：https://uniapp.dcloud.io/collocation/pages
		{
			"path": "pages/index/index",
			"style": {
				"navigationBarTitleText": "首页",
				"enablePullDownRefresh": false,
				"backgroundTextStyle": "light", // 下拉刷新loading小圆点颜色，白底+白色小圆点可以实现“隐藏”原生小圆点哦
				"navigationStyle": "custom" // 自定义导航栏(不自定义导航栏也可以使用本组件哦，只不过就只能使用原生小圆点样式了，无法自定义下拉刷新样式)
				// "backgroundColor": "#34A2E8" // 页面背景底色
			}
		},
		{
			"path": "pages/login/login",
			"style": {
				"navigationBarTitleText": "登录"
			}
		},
		{
			"path": "pages/login/login-mobile",
			"style": {
				"navigationBarTitleText": "登录"
			}
		},
		{
			"path": "pages/error/error",
			"style": {
				"navigationBarTitleText": "错误"
			}
		},
		{
			"path": "pages/openId-page/index",
			"style": {
				"navigationBarTitleText": "获取openId"
			}
		},
		{
			"path": "pages/user/user-msg",
			"style": {
				"navigationBarTitleText": "我的消息"
			}
		},
		{
			"path": "pages/user/user-fans",
			"style": {
				"navigationBarTitleText": "粉丝"
			}
		},
		{
			"path": "pages/user/index",
			"style": {
				"navigationBarTitleText": "个人信息"
			}
		}
	],
	"subPackages": [
		{
			"root": "myPackageA",
			"pages": [
				{
					"path": "pages/createdream/index",
					"style": {
						"navigationBarTitleText": "创建梦"
					},
					"navigationStyle": "custom" // 自定义导航栏(不自定义导航栏也可以使用本组件哦，只不过就只能使用原生小圆点样式了，无法自定义下拉刷新样式)
				},
				{
					"path": "pages/createdream/createform",
					"style": {
						"navigationBarTitleText": "创建梦"
					}
				},
				{
					"path": "pages/updatadream/index",
					"style": {
						"navigationBarTitleText": "更新梦"
					}
				},
				{
					"path": "pages/dream/dream-detail",
					"style": {
						"navigationBarTitleText": "我的筑梦"
					}
				}
			]
		},
		{
			"root": "myPackageB",
			"pages": []
		}
	],
	"preloadRule": {},
	"globalStyle": {
		"app-plus": {
			// #ifdef H5
			"navigationStyle": "custom"
			// #endif
		},
		"navigationBarBackgroundColor": "#FFFFFF",
		"navigationBarTitleText": "",
		"navigationStyle": "custom",
		"navigationBarTextStyle": "black"
	},
	"condition": { //模式配置，仅开发期间生效
		"current": 9, //当前激活的模式(list 的索引项)
		"list": [
			{
				"name": "首页",
				"path": "pages/index/index"
			},
			{
				"name": "创建梦",
				"path": "myPackageA/pages/createdream/index"
			},
			{
				"name": "我的筑梦",
				"path": "myPackageA/pages/dream/dream-detail"
			},
			{
				"name": "个人信息",
				"path": "pages/user/index"
			}
		]
	}
}
